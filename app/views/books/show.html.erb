<h2>New book</h2>
<%= form_with model:@book, local:true do |f| %>
 <div class="form-group">
   <label for="book_title">Title</label>
   <%= f.text_field:title %>
 </div>
 <div class="form-group">
   <label for="book_opinion">Opinion</label>
   <%= f.text_area:body %>
 </div>
 <div class="form-group">
   <%= f.submit 'Create Book' %>
 </div>
<%end%>

<h2>Book detail</h2>
<table class="table">
  <tbody>
    <tr>
      <td>
        <%= attachment_image_tag @book.user, :profile_image_id %></br>
        <%= @book.user.name %>
      </td>
      <td><%= @book.title %></td>
      <td><%= @book.body %></td>
      <td><%= link_to 'Edit', edit_book_path(@book.id), class:"btn btn-success" %></td>
      <td></td>
    </tr>
  </tbody>
</table>