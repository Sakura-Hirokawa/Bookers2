<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <h2>User info</h2>
      <%= attachment_image_tag @user, :profile_image, :fill,100,100, fallback: "no_image.jpg" %>
      <table class="table">
         <tbody>
           <tr></tr>
           <tr>
             <th>name</th>
             <th><%= @user.name %></th>
           </tr>
           <tr>
             <th>introduction</th>
             <th><%= @user.introduction %></th>
            </tr>
          </tbody>
       </table>
       
       <div class="row">
          <%= link_to 'edit', edit_user_path(@user.id), class:"btn btn-outline-secondary btn-block" %>
       </div>
       
       <!--Newbook新規投稿フォーム-->
       <h2 class="mt-3">New book</h2>
        <%= form_with model:@book_new, local:true do |f| %>
         <div class="form-group">
           <label for="book_title">Title</label>
           <input class="form-control book_title" type="text" name="book[title]" id="book_title">
         </div>
         <div class="form-group">
           <label for="book_opinion">Opinion</label>
           <textarea class="form-control book_body" name="book[body]" id="book_body">
             
           </textarea>
         </div>
         <div class="form-group">
           <input type="submit" name="commit" value="Create Book" class="btn btn-success" data-disable-with="Create Book">
         </div>
        <%end%>
      </div>
      
      <!--book詳細画面-->
      <div class="col-md-8 offset-md-1">
        <h2>Book detail</h2>
        <table class="table">
          <tbody>
            <tr>
              <td>
              <%= attachment_image_tag @book.user, :profile_image,:fill,40,40 %></br>
              <%= @book.user.name %>
              </td>
              <td><%= link_to @book.title, book_path(@book.id)  %></td>
              <td><%= @book.body %></td>
              
              <% if @book.user == current_user %>
                <td><%= link_to 'Edit', edit_book_path(@book.id), class:"btn btn-success" %></td>
                <td><%= link_to 'Destroy', book_path(@book.id), method: :delete, class:"btn btn-danger",
                    "data-confirm"=>"本当に消しますか？" %></td>
              <%end%>
              
            </tr>
          </tbody>
        </table>
     </div>
   </div>
</div>