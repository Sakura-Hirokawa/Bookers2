<%= form_with model:book, local:true do |f| %>
  <div class="form-group row">
    <%= f.label:Title %>
    <%= f.text_field:title %>
  </div>
  <div class="form-group row">
    <%= f.label:Opinion %>
    <%= f.text_area:body %>
  </div>
  <div class="form-group row">
    <%= f.submit 'Create Book', class:"btn btn-success" %>
  </div>
<%end%>