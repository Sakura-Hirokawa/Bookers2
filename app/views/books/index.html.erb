<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <h2>User info</h2>
      <%= attachment_image_tag @user, :profile_image, :fill,100,100, fallback: "no_image.jpg" %>
      <table class="table">
         <tbody>
           <tr></tr>
           <tr>
             <th>name</th>
             <th><%= @user.name %></th>
           </tr>
           <tr>
             <th>introduction</th>
             <th><%= @user.introduction %></th>
            </tr>
          </tbody>
        </table>
        
        <!--設定ボタン-->
        <div class="row">
          <%= link_to 'edit', edit_user_path(@user.id), class:"btn btn-outline-secondary btn-block" %>
        </div>

        <h2 class="mt-3">New book</h2>
        <%= form_with model:@book, local:true do |f| %>
         <div class="form-group">
           <label for="book_title">Title</label>
           <input class="form-control book_titlte" type="text" name="book[title]" id="book_title">
         </div>
         <div class="form-group">
           <label for="book_body">Opinion</label>
           <textarea class="form-control book_opinion" type="text" name="book[body]" id="book_body">
             
           </textarea>
         </div>
         <div class="form-group">
           <input type="submit" name="commit" value="Create Book" class="btn btn-success" data-disable-with="Create Book">
         </div>
        <%end%>
    </div>


    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <table class="table table-hover">
        <thead>
          <tr>
            <th scope="col"></th>
            <th scope="col">Title</th>
            <th scope="col">Opinion</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
        <% @books.each do |book| %>
          <tr>
            <td><%= attachment_image_tag book.user, :profile_image, :fill,40,40 %></td>
            <td><%= link_to book.title, book_path(book.id) %></td>
            <td><%= book.body %></td>
          </tr>
        <%end%>
        </tbody>
      </table>
    </div>
  </div>
</div>



